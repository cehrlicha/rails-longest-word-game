<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">


      <h2>Let's start the game!!</h2>
      <div class="user-input">
        <form action="/game">
          <label for="grid-size"> Choose your grid size</label>
          <div class="form-group form-inline">
          <input type="text" id="grid-size" name="grid_size" placeholder="e.g. 7" class="form-control">
          <input type="submit" value="Go!" class="btn btn-primary">
          </div>
        </form>
      </div>

    </div>

    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <p><%=@grid%></p>

    </div>

    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <h3>What is your answer! Time is running...</h3>
      <div class="user-input">
        <form action="/score" class="form-inline">
          <input type="text" id="user_answer" name="user_answer" class="form-control">
          <input type="hidden" value="<%= @grid%>"  name="grid">
          <input type="hidden" value="<%= @start_time%>" name="start_time">
          <input type="submit" value="Score" class="btn btn-success">
        </form>
      </div>

    </div>

  </div>
</div>
